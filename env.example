# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Pollinations.AI Configuration (FREE - no API key required!)
# Text Generation: https://text.pollinations.ai/{prompt}
# Image Generation: https://image.pollinations.ai/prompt/{prompt}
# No configuration needed - just works!

# OpenAI Configuration (backup)
OPENAI_API_KEY=your_openai_api_key
USE_DEMO_STORIES=false

# Server Configuration
PORT=8080
NODE_ENV=development

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
